{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@thecueroom/db": ["../packages/db/src"],
      "@thecueroom/schemas": ["../packages/schemas/src"],
      "@thecueroom/ui": ["../packages/ui/src"]
    },
    "outDir": "dist"
  },
  "include": ["**/*.ts"]
}
